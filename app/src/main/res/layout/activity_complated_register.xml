<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComplatedRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_25sdp"
                tools:src="@mipmap/rgsucess"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_75sdp"
            android:text="@string/comapletd"
            android:lineSpacingExtra="@dimen/_3sdp"
            android:textColor="@color/blue"
            android:textSize="@dimen/_18sdp" />




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_39sdp"
            android:layout_gravity="center"
            android:background="@drawable/signin_btn"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_60sdp"
            android:paddingTop="@dimen/_2sdp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adtional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/bottom"
                android:fontFamily="@font/poppins_semibold"
                android:text="Additional Options"
                android:textSize="@dimen/_13ssp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/bottom"
                android:layout_marginHorizontal="@dimen/_130sdp"/>


        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>