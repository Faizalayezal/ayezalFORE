<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainPopup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="@dimen/_100sdp"
        android:outlineAmbientShadowColor="@color/mnoyellow"
        android:outlineSpotShadowColor="@color/mnoyellow"
        app:cardBackgroundColor="@color/mnoyellow"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_7sdp"
        tools:ignore="UnusedAttribute"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtReport"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:paddingHorizontal="@dimen/_15sdp"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="Report \n&amp; Block"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingTop="@dimen/_10ssp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/txtUnmatched"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:paddingHorizontal="@dimen/_15sdp"
                android:text="Unmatch"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_10ssp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>