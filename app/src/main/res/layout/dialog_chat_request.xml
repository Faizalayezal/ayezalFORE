<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainPopup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_request"
        android:layout_gravity="center"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_20sdp"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/_40sdp"
        tools:ignore="UnusedAttribute">

        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Louis has sent you private chat request, \nDo you want to accept?"
            android:textSize="@dimen/_10ssp"
            android:gravity="start"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ignorbg"
                android:text="Ignore"
                android:paddingTop="@dimen/_2sdp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:textSize="@dimen/_11ssp"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textAllCaps="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/acceptbg"
                android:text="Accept"
                android:paddingTop="@dimen/_2sdp"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/poppins_medium"
                android:paddingHorizontal="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:gravity="center"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />


        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.02pm"
        android:gravity="center"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_weight="1"
        android:textSize="@dimen/_9ssp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/timecolor"
        android:textAllCaps="false"
        />


</LinearLayout>