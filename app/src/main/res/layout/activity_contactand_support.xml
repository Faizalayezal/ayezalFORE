<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.activity.ContactandSupportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/chatbg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:src="@mipmap/back2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="Contact &amp; Support"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_19ssp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_70sdp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edttxtname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/mnoyellow"
                android:digits="@string/only_alfabets"
                android:hint="Name"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="20dp"
                android:paddingBottom="@dimen/_9sdp"
                android:singleLine="true"
                android:textColorHint="@color/border"
                android:textSize="@dimen/_14ssp" />

            <EditText
                android:id="@+id/edttxtEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/mnoyellow"
                android:hint="Email"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="20dp"
                android:paddingBottom="@dimen/_9sdp"
                android:singleLine="true"
                android:textColorHint="@color/border"
                android:textSize="@dimen/_14ssp" />

            <EditText
                android:id="@+id/edttxtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/mnoyellow"
                android:hint="Question?"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:paddingLeft="20dp"
                android:maxLength="200"
                android:fontFamily="@font/poppins_medium"
                android:paddingBottom="@dimen/_9sdp"
                android:singleLine="false"
                android:textColorHint="@color/border"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/txtcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0/200" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_37sdp"
                android:layout_gravity="center"
                android:background="@drawable/accept_btn"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Submit"
                android:paddingTop="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_50sdp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"/>

        </LinearLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>